---
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Thank You — NexTara AI Solutions"
  description="Your message has been received. We'll be in touch soon."
  robots="noindex,follow"
>
  <main class="container page-pad-top" data-nt-section="contact_thank_you">
    <div class="thankyou-content">
      <div class="thankyou-icon" aria-hidden="true">✓</div>
      <h1>Message Received</h1>
      <p class="thankyou-lead">Thank you for reaching out. We'll respond within one business day.</p>
      
      <div class="thankyou-next">
        <p class="thankyou-label">While you wait</p>
        <p>Learn how we help businesses build credibility systems that drive sustainable growth.</p>
      </div>

      <div class="thankyou-actions">
        <a class="btn btn-primary" href="/dcs/" data-nt-event="thankyou_explore_dcs">Explore the DCS Framework</a>
        <a class="btn btn-secondary" href="/" data-nt-event="thankyou_back_home">Return Home</a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .thankyou-content {
    max-width: 560px;
    margin: 0 auto;
    text-align: center;
    padding: 2rem 0 4rem;
  }

  .thankyou-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
    color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
    border: 2px solid rgba(34, 197, 94, 0.3);
    border-radius: 50%;
  }

  .thankyou-content h1 {
    margin-bottom: 1rem;
    font-size: 2.25rem;
  }

  .thankyou-lead {
    font-size: 1.25rem;
    color: var(--color-text-muted, #94a3b8);
    margin-bottom: 2.5rem;
  }

  .thankyou-next {
    background: var(--color-surface, #1e293b);
    border: 1px solid var(--color-border, #334155);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .thankyou-label {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary, #3b82f6);
    margin-bottom: 0.5rem;
  }

  .thankyou-next p:last-child {
    color: var(--color-text-muted, #94a3b8);
    margin: 0;
  }

  .thankyou-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .thankyou-actions .btn {
    min-width: 240px;
  }

  @media (min-width: 480px) {
    .thankyou-actions {
      flex-direction: row;
      justify-content: center;
    }

    .thankyou-actions .btn {
      min-width: auto;
    }
  }
</style>