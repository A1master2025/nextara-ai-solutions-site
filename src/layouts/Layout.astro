/**
 * MVIG (Minimum Viable Indexing Gate)
 * - Canonical always points to production origin (prevents Netlify preview competing).
 * - Non-prod hosts: noindex,nofollow (defensive, no overrides allowed).
 * - Prod host: index,follow by default.
 * - Per-page robots override supported on prod only (e.g., /dcs-diagnostic/ => noindex,follow).
 * - Adds canonical, meta description, OG/Twitter, and structured data via StructuredData component.
 *
 * Phase 5 Update:
 * - Schema now uses centralized StructuredData component with @graph structure
 * - Structured data is temporarily inlined at the layout level (SMB override)
 */

interface Props {
  title?: string;
  description?: string;
  ogImagePath?: string;
  robots?: string;
  /** Additional schema nodes from child layouts (BreadcrumbList, Service, ItemList) */
}

const {
  title: pageTitle,
  description: pageDescription,
  ogImagePath,
    robots: robotsOverride,

} = Astro.props;

// Production origin is the canonical source of truth
const CANONICAL_ORIGIN = "https://nextara-ai-solutions.com";

// Netlify build context (SSG-safe; deterministic)
const NETLIFY_CONTEXT = process.env.CONTEXT || "local";
const isProduction = NETLIFY_CONTEXT === "production";

// Canonical path normalization (trailing slash safety for route paths)
const rawPath = Astro.url?.pathname || "/";
const normalizedPath =
  rawPath.includes(".") ? rawPath : (rawPath.endsWith("/") ? rawPath : `${rawPath}/`);

// Canonical always uses production origin
const canonicalUrl = new URL(normalizedPath, CANONICAL_ORIGIN).toString();

// Default robots by environment
const netlifyContext = process.env.CONTEXT; // production | deploy-preview | branch-deploy | undefined
const isProdDeploy = netlifyContext ? netlifyContext === "production" : import.meta.env.PROD;
const defaultRobots = isProdDeploy ? "index,follow" : "noindex,nofollow";
const robots = isProdDeploy ? (robotsOverride ?? defaultRobots) : defaultRobots;

// Final robots:
// - Non-prod: always noindex,nofollow (do not allow overrides to weaken this)
// - Prod: allow per-page override (e.g., /dcs-diagnostic/ => noindex,follow)

// Defaults (Phase 2-safe)
const DEFAULT_TITLE = "NexTara AI Solutions | AI-Powered Digital Growth for SMBs";
const DEFAULT_DESCRIPTION =
  "Get found online, turn visitors into leads, and see real ROI. AI-powered digital marketing built for small and medium businesses.";

const title = pageTitle || DEFAULT_TITLE;
const description = pageDescription || DEFAULT_DESCRIPTION;

// Optional OG image
const ogImageAbs = ogImagePath ? new URL(ogImagePath, CANONICAL_ORIGIN).toString() : undefined;

