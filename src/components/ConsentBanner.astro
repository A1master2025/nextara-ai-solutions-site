---
// ConsentBanner.astro
// NexTara Consent Mode v2 UI Component
// Version: CG0-B1-v1.0
---

<div 
  id="nt-consent-banner" 
  class="nt-consent-banner"
  role="dialog"
  aria-labelledby="consent-title"
  aria-describedby="consent-description"
  aria-live="polite"
  data-nt-section="consent_gate"
  style="display: none;"
>
  <div class="nt-consent-content">
    <div class="nt-consent-text">
      <h2 id="consent-title" class="nt-consent-title">Your Privacy Matters</h2>
      <p id="consent-description" class="nt-consent-description">
        We use analytics to improve your experience and measure site performance. 
        Your choice is stored and respected across all visits. 
        <a href="/privacy" class="nt-consent-link">View our privacy policy</a>
      </p>
    </div>
    <div class="nt-consent-actions">
      <button 
        id="nt-consent-accept"
        class="nt-consent-btn nt-consent-accept"
        data-nt-event="consent_accept"
        data-nt-conversion="false"
        aria-label="Accept analytics and close banner"
      >
        Accept
      </button>
      <button 
        id="nt-consent-decline"
        class="nt-consent-btn nt-consent-decline"
        data-nt-event="consent_decline"
        data-nt-conversion="false"
        aria-label="Decline analytics and close banner"
      >
        Decline
      </button>
    </div>
  </div>
</div>

<style>
  .nt-consent-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(15, 23, 42, 0.98), rgba(15, 23, 42, 0.95));
    backdrop-filter: blur(12px);
    border-top: 1px solid rgba(148, 163, 184, 0.2);
    padding: 1.5rem;
    z-index: 9999;
    box-shadow: 0 -4px 24px rgba(0, 0, 0, 0.2);
    animation: slideUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes slideUp {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .nt-consent-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .nt-consent-text {
    flex: 1;
    min-width: 280px;
  }

  .nt-consent-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #f1f5f9;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }

  .nt-consent-description {
    font-size: 0.9375rem;
    color: #cbd5e1;
    line-height: 1.6;
    margin: 0;
  }

  .nt-consent-link {
    color: #38bdf8;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .nt-consent-link:hover,
  .nt-consent-link:focus {
    color: #7dd3fc;
  }

  .nt-consent-link:focus {
    outline: 2px solid #38bdf8;
    outline-offset: 2px;
    border-radius: 2px;
  }

  .nt-consent-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .nt-consent-btn {
    padding: 0.625rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
    white-space: nowrap;
  }

  .nt-consent-accept {
    background: #38bdf8;
    color: #0f172a;
  }

  .nt-consent-accept:hover {
    background: #7dd3fc;
    transform: translateY(-1px);
  }

  .nt-consent-accept:focus {
    outline: 2px solid #38bdf8;
    outline-offset: 2px;
  }

  .nt-consent-decline {
    background: transparent;
    color: #cbd5e1;
    border: 1px solid rgba(148, 163, 184, 0.3);
  }

  .nt-consent-decline:hover {
    background: rgba(148, 163, 184, 0.1);
    border-color: rgba(148, 163, 184, 0.5);
  }

  .nt-consent-decline:focus {
    outline: 2px solid #cbd5e1;
    outline-offset: 2px;
  }

  @media (max-width: 640px) {
    .nt-consent-banner {
      padding: 1.25rem 1rem;
    }

    .nt-consent-content {
      flex-direction: column;
      gap: 1.25rem;
      align-items: stretch;
    }

    .nt-consent-actions {
      width: 100%;
      flex-direction: column;
    }

    .nt-consent-btn {
      width: 100%;
      padding: 0.75rem 1rem;
    }

    .nt-consent-title {
      font-size: 1rem;
    }

    .nt-consent-description {
      font-size: 0.875rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .nt-consent-banner {
      animation: none;
    }

    .nt-consent-btn:hover {
      transform: none;
    }
  }

  @media (prefers-contrast: high) {
    .nt-consent-banner {
      border-top: 2px solid #fff;
    }

    .nt-consent-accept {
      border: 2px solid #000;
    }

    .nt-consent-decline {
      border: 2px solid #fff;
    }
  }
</style>

<script>
  (function() {
    'use strict';

    const RETRY_INTERVAL = 300;
    const MAX_RETRIES = 10;
    const BANNER_DISPLAY_DELAY = 100;

    let retryCount = 0;

    function initConsentBanner() {
      if (typeof window.nt_show_consent_banner === 'undefined') {
        if (retryCount < MAX_RETRIES) {
          retryCount++;
          setTimeout(initConsentBanner, RETRY_INTERVAL);
          return;
        } else {
          console.warn('NT Consent: GTM flags unavailable after retries, showing banner as fallback');
          window.nt_show_consent_banner = true;
        }
      }

      if (window.nt_show_consent_banner === true) {
        const banner = document.getElementById('nt-consent-banner');
        if (banner) {
          setTimeout(() => {
            banner.style.display = 'block';
          }, BANNER_DISPLAY_DELAY);
        }
      }

      attachConsentHandlers();
    }

    function attachConsentHandlers() {
      const acceptBtn = document.getElementById('nt-consent-accept');
      const declineBtn = document.getElementById('nt-consent-decline');

      if (acceptBtn) {
        acceptBtn.addEventListener('click', function() {
          handleConsent('granted');
        });
      }

      if (declineBtn) {
        declineBtn.addEventListener('click', function() {
          handleConsent('denied');
        });
      }
    }

    function handleConsent(state) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        'event': 'nt_consent_update',
        'consent_state': state
      });

      const banner = document.getElementById('nt-consent-banner');
      if (banner) {
        banner.style.animation = 'slideDown 0.3s ease-out forwards';
        setTimeout(() => {
          banner.style.display = 'none';
        }, 300);
      }

      console.log('NT Consent: User choice processed', state);
    }

    const style = document.createElement('style');
    style.textContent = `
      @keyframes slideDown {
        from {
          transform: translateY(0);
          opacity: 1;
        }
        to {
          transform: translateY(100%);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initConsentBanner);
    } else {
      initConsentBanner();
    }
  })();
</script>